# Site URL
IMAGE_HOSTNAME=
NEXT_PUBLIC_URL=https://your-domain.com

# Strapi Configuration
NEXT_PUBLIC_STRAPI_SYNC_UPLOADS=true
NEXT_PUBLIC_STRAPI_API_URL=http://localhost:1337

# Strapi API Token
# Generate this in Strapi Admin: Settings > API Tokens > Create new API Token
STRAPI_API_TOKEN=your-strapi-api-token
NEXT_PUBLIC_STRAPI_API_TOKEN=your-strapi-api-token

# Pagination
NEXT_PUBLIC_STRAPI_API_PAGE_SIZE=12

# Preview Secret (should match PREVIEW_SECRET in Strapi)
PREVIEW_SECRET=your-preview-secret-key
