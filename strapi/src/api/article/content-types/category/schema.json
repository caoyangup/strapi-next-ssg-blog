{
  "kind": "collectionType",
  "collectionName": "article_categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "category"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": false
    },
    "slug": {
      "type": "customField",
      "customField": "plugin::pinyin-slug.pinyin-slug",
      "options": {
        "sourceField": "name"
      },
      "required": true,
      "unique": true
    },
    "articles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article",
      "mappedBy": "category"
    }
  }
}
